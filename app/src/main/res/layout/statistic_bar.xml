<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/statisticbarbackground">

    <RelativeLayout
        android:id="@+id/cell_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:id="@+id/statisticbar_total_txt"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:layout_height="36dp"
            android:layout_width="@dimen/statisticbar_txt_width"
            android:text="@string/statisticbarcell_first_name"
            android:textSize="12sp">
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cell_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:id="@+id/statisticbar_food_txt"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:layout_height="36dp"
            android:layout_width="@dimen/statisticbar_txt_width"
            android:text="@string/statisticbarcell_second_name"
            android:textSize="12sp">
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cell_allcomments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:id="@+id/statisticbar_allcomments_txt"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:layout_height="36dp"
            android:layout_width="@dimen/statisticbar_txt_width"
            android:text="@string/statisticbarcell_third_name"
            android:textSize="12sp">
        </TextView>
    </RelativeLayout>

</LinearLayout>
