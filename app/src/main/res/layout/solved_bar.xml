<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/solvedbarbackground">

    <RelativeLayout
        android:id="@+id/cell_finished"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:id="@+id/solvedbar_finished_txt"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:layout_height="36dp"
            android:layout_width="@dimen/solvedbar_txt_width"
            android:text="@string/solvedbarcell_first_name"
            android:textSize="12sp">
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cell_canceled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:id="@+id/solvedbar_canceled_txt"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:layout_height="36dp"
            android:layout_width="@dimen/solvedbar_txt_width"
            android:text="@string/solvedbarcell_second_name"
            android:textSize="12sp">
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cell_advices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:id="@+id/solvedbar_advices_txt"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:layout_height="36dp"
            android:layout_width="@dimen/solvedbar_txt_width"
            android:text="@string/solvedbarcell_third_name"
            android:textSize="12sp">
        </TextView>
    </RelativeLayout>

</LinearLayout>
